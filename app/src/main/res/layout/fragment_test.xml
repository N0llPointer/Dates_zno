<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2"
    android:layout_gravity="center"
    android:padding="8dp"
    android:background="@color/colorBackgroundTest">
    <com.appodeal.ads.BannerView
        android:id="@+id/appodealBannerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_row="0"
        app:layout_gravity="top"
        app:layout_column="0"
        app:layout_columnSpan="2"
        android:visibility="gone" />
    <TextView
        app:layout_row="1"
        app:layout_column="0"
        app:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:textAppearance="?android:textAppearanceMedium"
        android:drawableStart="@drawable/thumb_up_selector"
        android:id="@+id/right_answers"
        android:background="@color/colorBackgroundTest"
        />
    <TextView
        app:layout_row="1"
        app:layout_column="1"
        app:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:textAppearance="?android:textAppearanceMedium"
        android:drawableEnd="@drawable/thumb_down_selector"
        android:id="@+id/wrong_answers"
        android:background="@color/colorBackgroundTest"
        />
    <TextView
        android:id="@+id/test_info"
        app:layout_row="2"
        android:textAppearance="?android:textAppearanceLarge"
        app:layout_gravity="fill"
        android:gravity="center"
        app:layout_column="0"
        android:background="@color/colorBackgroundTest"
        app:layout_rowWeight="1"
        app:layout_columnSpan="2"
        android:textColor="@android:color/black" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/test_Btn0"
        app:layout_row="3"
        style="?android:borderlessButtonStyle"
        app:layout_columnSpan="2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_gravity="fill_horizontal"
        android:layout_height="wrap_content" />

    <Button
        app:layout_row="4"
        app:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:id="@+id/test_Btn1"
        style="?android:borderlessButtonStyle"
        android:layout_marginBottom="10dp"
        app:layout_gravity="fill_horizontal"
        android:layout_height="wrap_content" />

    <Button
        app:layout_row="5"
        app:layout_columnSpan="2"
        android:layout_width="wrap_content"
        style="?android:borderlessButtonStyle"
        android:id="@+id/test_Btn2"
        android:layout_marginBottom="10dp"
        app:layout_gravity="fill_horizontal"
        android:layout_height="wrap_content" />

    <Button
        app:layout_row="6"
        app:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:id="@+id/test_Btn3"
        style="?android:borderlessButtonStyle"
        android:layout_marginBottom="25dp"
        app:layout_gravity="fill_horizontal"
        android:layout_height="wrap_content" />

</android.support.v7.widget.GridLayout>
