<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2"
    android:padding="8dp"
    android:layout_gravity="center"
    android:background="@color/colorBackgroundTest">

    <com.appodeal.ads.BannerView
        android:id="@+id/appodealBannerView_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_row="0"
        android:background="@color/colorBackgroundTest"
        app:layout_gravity="top"
        app:layout_column="0"
        app:layout_columnSpan="2"
        android:visibility="gone" />

    <TextView
        app:layout_row="1"
        app:layout_column="0"
        app:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_green_dark"
        android:textAppearance="?android:textAppearanceMedium"
        android:drawableStart="@drawable/thumb_up_selector"
        android:id="@+id/right_answers"
        android:background="@color/colorBackgroundTest"
        />

    <TextView
        app:layout_row="1"
        app:layout_column="1"
        app:layout_gravity="end"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_light"
        android:textAppearance="?android:textAppearanceMedium"
        android:drawableEnd="@drawable/thumb_down_selector"
        android:id="@+id/wrong_answers"
        android:background="@color/colorBackgroundTest"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_column="0"
        app:layout_row="2"
        app:layout_columnSpan="2"
        android:background="@color/colorBackgroundTest"
        app:layout_rowWeight="1"
        android:orientation="vertical"
        android:gravity="center" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:id="@+id/instruction_sort"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/black"
            android:layout_gravity="fill"
            android:gravity="center"
            android:text="@string/sotr_text"/>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            app:cardElevation="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/cardView1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="4dp"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/button_cardview_1"
                    android:layout_height="match_parent" />

                <View
                    android:layout_height="match_parent"
                    android:layout_width="2dp"
                    android:background="@color/colorBackgroundDivider"
                    android:layout_margin="2dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/textview_cardview_1"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginBottom="12dp"
            app:cardElevation="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/cardView2" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="4dp"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:id="@+id/button_cardview_2"
                    android:layout_weight="1"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:layout_height="match_parent" />

                <View
                    android:layout_height="match_parent"
                    android:layout_width="2dp"
                    android:background="@color/colorBackgroundDivider"
                    android:layout_margin="2dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:id="@+id/textview_cardview_2"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            android:background="@android:color/white"
            android:layout_weight="1"
            android:textAppearance="?android:textAppearanceMedium"
            android:id="@+id/cardView3"
            android:layout_marginBottom="12dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:padding="4dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:id="@+id/button_cardview_3"
                    android:layout_height="match_parent" />

                <View
                    android:layout_height="match_parent"
                    android:layout_width="2dp"
                    android:background="@color/colorBackgroundDivider"
                    android:layout_margin="2dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="9"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:layout_marginStart="5dp"
                    android:id="@+id/textview_cardview_3"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>

    <Button
        app:layout_row="3"
        app:layout_column="0"
        app:layout_columnSpan="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_button"
        android:textAppearance="?android:textAppearanceMedium"
        style="?android:borderlessButtonStyle"
        android:background="@color/colorBackgroundDivider"
        android:textColor="@android:color/black"
        android:layout_marginBottom="15dp"
        android:id="@+id/sort_check" />

</android.support.v7.widget.GridLayout>
